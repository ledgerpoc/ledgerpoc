{
  "name": "ledgerpoc",
  "version": "1.0.0",
  "description": "Ledger POC - SAP CAP",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "csv-parser": "^3.2.0",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "cds-plugin-ui5": "^0.13.0"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-accounts": "cds watch --open com.mbec.ledgerpoc.accounts/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-transactions": "cds watch --open com.mbec.ledgerpoc.transactions/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "cds": {
    "requires": {
      "db": {
        "[development]": {
          "kind": "sqlite",
          "credentials": {
            "url": ":memory:"
          }
        }
      }
    }
  },
  "private": true,
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/accounts",
    "app/transactions"
  ]
}
